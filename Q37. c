#include <stdio.h>
#include <stdlib.h>
int main()
{
    int n, i, j, count = 0;
    int *arr;
    printf("Enter size of an array : ");
    scanf("%d", &n);
    arr = (int *)malloc(n * sizeof(int));
    printf("Enter %d elements :\n", n);
    for (i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    for (i = 0; i < n; i++)
    {
        for (j = i + 1; j < n; j++)
        {
            if (arr[i] == arr[j] && i < j)
                count++;
        }
    }
    printf("Number of Good pairs = %d", count);
    free(arr);
    return 0;
}