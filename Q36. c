#include <stdio.h>
#include <stdlib.h>
int main()
{
    int n, sum = 0, avg;
    printf("Enter size of an array : ");
    scanf("%d", &n);
    int *arr = (int *)malloc(sizeof(int) * n);
    printf("Enter %d elements : \n", n);
    for (int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
        sum += arr[i];
    }
    avg = sum / n;
    printf("Sum = %d\nAverage = %d\n", sum, avg);
    free(arr);
    return 0;
}